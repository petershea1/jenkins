pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                sh 'echo "Building..."'
            }
        }
        stage('Test') { 
            steps {
                sh 'echo "Testing..."'
                sh "./terraform apply"
            }
        }
        stage('Deploy') { 
            steps {
                sh 'echo "Deploying..."'
            }
        }
    }
}