pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                sh 'echo "Building..."'
            }
        }
        stage('Init') { 
            steps {
                sh 'echo "Testing..."'
            }
        }
        stage('Apply') { 
            steps {
                sh 'echo "Deploying..."'
                sh './terraformw apply -auto-approve -no-color'
            }
        }
    }
}
